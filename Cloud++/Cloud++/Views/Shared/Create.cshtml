@model Cloud__.Models.ViewModels.CreateProjectViewModel
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <button class="btn btn-primary btn-sm pull-right" data-target="#createModal" data-toggle="modal">Create project</button>
            <div class="modal fade" id="createModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Create project</h4>
                        </div>
                        <div class="modal-body">
                            @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="midja">
                                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })

                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

                                    <select>
                                        <option>.main</option>
                                        <option>.cpp</option>
                                        <option>.h</option>
                                    </select>
                                </div>

                                <br>

                                <div class="midja">
                                    <p class="fkn">
                                         <input type="submit" class="btn btn-default" value="Create" />
                                    </p>
                                    <p class="fkn">
                                         <button class="btn btn-default" data-dismiss="modal">Close</button>
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}