
@{
    ViewBag.Title = "ForgotPassword";
}

<h2>ForgotPassword</h2>

<dl class="dl-horizontal">
    <dt>Email:</dt>
    <dd>
        [
        @if (Model.HasPassword)
        {
            @Html.ActionLink("Change your username", "ChangePassword")
        }
        else
        {
            @Html.ActionLink("Create", "SetPassword")
        }
        ]
    </dd>